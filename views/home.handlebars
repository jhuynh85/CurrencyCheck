<center>
	<h1>BoA Currency Exchange Rate Checker</h1>
</center>
<div class="container">
	<div class="card">
		<div class="card-header">
			Watching
		</div>
		<div class="card-body">
			<table class="table table-hover">
				<thead class="thead-light">
					<tr>
						<th scope="col">#</th>
						<th scope="col">Currency</th>
						<th scope="col">Exchange rate (USD)</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">1</th>
						<td>CAD</td>
						<td>Otto</td>
					</tr>
					<tr>
						<th scope="row">2</th>
						<td>Jacob</td>
						<td>Thornton</td>
					</tr>
					<tr>
						<th scope="row">3</th>
						<td>Larry</td>
						<td>the Bird</td>
					</tr>
				</tbody>
			</table>
			<a href="#" class="btn btn-primary">Add currency</a>
		</div>
	</div>

</div>
<div class="container">
	<div class="row">
		<div class="col-sm">
			CAD -> USD:
		</div>
		<div id="cad-rate" class="col-sm"></div>
	</div>
	<div class="row">
		<div class="col-sm">
			EUR -> USD:
		</div>
		<div class="col-sm">
			$
		</div>
	</div>
</div>
