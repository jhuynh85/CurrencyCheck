<center>
	<h1>BoA Currency Exchange Rate Checker</h1>
</center>
<div class="container">
	<div class="card">
		<div class="card-header">
			Watching
		</div>
		<div class="card-body">
			<table class="table table-hover">
				<thead class="thead-light">
					<tr>
						<th scope="col">#</th>
						<th scope="col">Currency</th>
						<th scope="col">Exchange rate (USD)</th>
					</tr>
				</thead>
				<tbody id="watchlist-body">
				</tbody>
			</table>
			<div class="dropdown">
				<button class="btn btn-primary dropdown-toggle" type="button" id="currencyDropdown" data-toggle="dropdown" aria-haspopup="true"
				 aria-expanded="false">
					Add currency
				</button>
				<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
					<a class="dropdown-item" href="#">Abu Dhabi</a>
					<a class="dropdown-item" href="#">Ajman</a>
					<a class="dropdown-item" href="#">Andorra</a>
					<a class="dropdown-item" href="#">Anguilla</a>
					<a class="dropdown-item" href="#">Antigua & Barbuda</a>
					<a class="dropdown-item" href="#">Australia</a>
					<a class="dropdown-item" href="#">Austria</a>
					<a class="dropdown-item" href="#">Azores</a>
					<a class="dropdown-item" href="#">Bahrain</a>
				</div>
			</div>
		</div>
	</div>
</div>
